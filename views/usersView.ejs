<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Users</title>
    <link rel="stylesheet" href="/styles/sub.css">
</head>
<body>
    <h1>Users List</h1>
    <div>
        <a href="/users/add">Add Users</a>
        <ul>
            <% users.forEach(user => { %>
                <li>
                    <h2><%= user.username %></h2>
                    <p>Email: <%= user.email %></p>
                    <p>Password: <%= user.password %></p>
                    <div>
                        <a href="/users/edit/<%= user._id %>">Edit User</a>
                        <form action="/users/delete/<%= user._id %>?_method=DELETE" method="POST">
                            <button type="submit">Delete</button>
                        </form>
                        
                    </div>
                    
                </li>
            <% }) %>
        </ul>
        <a href="/">Back To Home</a>
    </div>
</body>
</html>